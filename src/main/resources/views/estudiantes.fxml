<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlestudios.controllers.EstudianteController"
            stylesheets="@../styles/materias.css">

    <!-- Sidebar (mismo que en main_menu.fxml) -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="20" prefWidth="200">
            <HBox alignment="CENTER" styleClass="sidebar-header" spacing="10" prefHeight="100">
                <!-- Logo -->
                <ImageView fitWidth="200" fitHeight="200" fx:id="logoImage">
                    <Image url="@../images/logo.png"/>
                </ImageView>
            </HBox>

            <!-- Opciones del menú -->
            <VBox fx:id="menuItems" spacing="10" styleClass="menu-items">
                <!-- Materias -->
                <Button text="Materias" styleClass="menu-button" onAction="#handleMaterias">
                    <graphic>
                        <SVGPath styleClass="icon" content="M2 1v14c1.5-.5 3-1 5-1s3.5.5 5 1V1c-1.5-.5-3-1-5-1S3.5.5 2 1"/>
                    </graphic>
                </Button>

                <!-- Estudiantes -->
                <Button text="Estudiantes" styleClass="menu-button" onAction="#handleEstudiantes">
                    <graphic>
                        <SVGPath styleClass="icon" content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                    </graphic>
                </Button>

                <!-- Notas -->
                <Button text="Notas" styleClass="menu-button" onAction="#handleNotas">
                    <graphic>
                        <SVGPath styleClass="icon" content="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zM6 4h7v5h5v11H6V4zm8 14H9v-2h5v2zm0-4H9v-2h5v2zm0-4H9V8h5v2z"/>                    </graphic>
                </Button>
                <!-- Salir -->
                <Button text="Salir" styleClass="menu-button" onAction="#handleSalir" VBox.vgrow="ALWAYS">
                    <graphic>
                        <SVGPath styleClass="icon" content="M2 1h12v14H2V1zm6 6a2 2 0 1 1 0-4 2 2 0 0 1 0 4"/>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <VBox spacing="20" styleClass="content-container">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-container">
                <Label text="Estudiantes" styleClass="title-label"/>
                <Button text="Agregar Estudiante" styleClass="add-button" onAction="#handleAgregarEstudiante">
                    <graphic>
                        <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                    </graphic>
                </Button>
            </HBox>

            <Line endX="1000" stroke="#e0e0e0"/>

            <StackPane>
                <TableView fx:id="tablaEstudiantes" styleClass="estudiantes-table">
                    <columns>
                        <TableColumn text="Nombre" prefWidth="250" property="nombreCompleto"/>
                        <TableColumn text="Cédula" prefWidth="120" property="cedula"/>
                        <TableColumn text="Fecha Nacimiento" prefWidth="150" property="fechaNacimiento"/>
                        <TableColumn text="Sección" prefWidth="100" property="seccion"/>
                        <TableColumn text="Acciones" prefWidth="120">
                            <cellFactory>
                                <TableColumn fx:factory="actions"/>
                            </cellFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Label text="No hay estudiantes registrados" styleClass="empty-message"
                       visible="${tablaEstudiantes.items.empty}"/>
            </StackPane>
        </VBox>
    </center>
</BorderPane>