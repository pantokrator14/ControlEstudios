<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlestudios.controllers.NotaController"
            stylesheets="@../styles/main_menu.css">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="20" prefWidth="200">
            <HBox alignment="CENTER" styleClass="sidebar-header" spacing="10" prefHeight="100">
                <!-- Logo -->
                <ImageView fitWidth="200" fitHeight="200" fx:id="logoImage">
                    <Image url="@../images/logo.png"/>
                </ImageView>
            </HBox>

            <!-- Opciones del menú -->
            <VBox fx:id="menuItems" spacing="10" styleClass="menu-items">
                <!-- Materias -->
                <Button text="Materias" styleClass="menu-button" onAction="#handleMaterias">
                    <graphic>
                        <SVGPath styleClass="icon" content="M2 1v14c1.5-.5 3-1 5-1s3.5.5 5 1V1c-1.5-.5-3-1-5-1S3.5.5 2 1"/>
                    </graphic>
                </Button>

                <!-- Estudiantes -->
                <Button text="Estudiantes" styleClass="menu-button" onAction="#handleEstudiantes">
                    <graphic>
                        <SVGPath styleClass="icon" content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                    </graphic>
                </Button>

                <!-- Notas -->
                <Button text="Notas" styleClass="menu-button" onAction="#handleNotas">
                    <graphic>
                        <SVGPath styleClass="icon" content="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zM6 4h7v5h5v11H6V4zm8 14H9v-2h5v2zm0-4H9v-2h5v2zm0-4H9V8h5v2z"/>                    </graphic>
                </Button>
                <!-- Salir -->
                <Button text="Salir" styleClass="menu-button" onAction="#handleSalir" VBox.vgrow="ALWAYS">
                    <graphic>
                        <SVGPath styleClass="icon" content="M2 1h12v14H2V1zm6 6a2 2 0 1 1 0-4 2 2 0 0 1 0 4"/>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Contenido principal dinámico -->
    <center>
        <StackPane fx:id="contenidoDinamico">
            <!-- Pantalla inicial: Búsqueda de estudiante -->
            <VBox alignment="CENTER" spacing="20" visible="${controller.modoBusqueda}">
                <Label text="Ingrese cédula del estudiante" styleClass="title-label"/>
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="txtCedulaBusqueda" promptText="Cédula" styleClass="input-field"/>
                    <Button text="Buscar" styleClass="search-button" onAction="#handleBuscarEstudiante">
                        <graphic>
                            <SVGPath content="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2c5.514 0 10 4.486 10 10s-4.486 10-10 10S2 17.514 2 12 6.486 2 12 2zm0 1.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM9 8a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1H9z"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Pantalla de notas (visible cuando modoBusqueda = false) -->
            <VBox spacing="20" visible="!${controller.modoBusqueda}">
                <!-- Encabezado -->
                <HBox alignment="CENTER" spacing="20" styleClass="header-container">
                    <Label text="Notas" styleClass="title-label"/>
                    <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                        <Button text="Registrar Nota" styleClass="add-button" onAction="#handleRegistrarNota">
                            <graphic>
                                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
                            </graphic>
                        </Button>
                        <Button text="Descargar Boleta" styleClass="download-button">
                            <graphic>
                                <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                            </graphic>
                        </Button>
                    </HBox>
                </HBox>

                <Line endX="1000" stroke="#e0e0e0"/>

                <!-- Tabla de notas -->
                <TableView fx:id="tablaNotas" styleClass="notas-table">
                    <columns>
                        <TableColumn text="Materia" prefWidth="300">
                            <cellValueFactory><PropertyValueFactory property="nombreMateria"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Nota" prefWidth="100">
                            <cellValueFactory><PropertyValueFactory property="valor"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Acciones" prefWidth="120"/>
                    </columns>
                </TableView>
                <Label text="No hay notas registradas aún" styleClass="empty-message"
                       visible="${tablaNotas.items.empty}"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>