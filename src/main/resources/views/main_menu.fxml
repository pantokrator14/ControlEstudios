<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlestudios.controllers.MainMenuController"
            stylesheets="@../styles/main_menu.css">

    <!-- Sidebar izquierdo (20% del ancho) -->
    <left>
        <VBox fx:id="sidebar" styleClass="sidebar" spacing="20" prefWidth="200">
            <HBox alignment="CENTER" styleClass="sidebar-header" spacing="10" prefHeight="100">
                <!-- Logo -->
                <ImageView fitWidth="200" fitHeight="200" fx:id="logoImage">
                    <Image url="@../images/logo.png"/>
                </ImageView>
            </HBox>

            <!-- Opciones del menú -->
            <VBox fx:id="menuItems" spacing="10" styleClass="menu-items">
                <!-- Materias -->
                <Button text="Materias" styleClass="menu-button" onAction="#handleMaterias">
                    <graphic>
                        <SVGPath styleClass="icon" content="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2c5.514 0 10 4.486 10 10s-4.486 10-10 10S2 17.514 2 12 6.486 2 12 2zm0 1.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zM9 8a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1H9z"/>                    </graphic>
                </Button>

                <!-- Estudiantes -->
                <Button text="Estudiantes" styleClass="menu-button" onAction="#handleEstudiantes">
                    <graphic>
                        <SVGPath styleClass="icon" content="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
                    </graphic>
                </Button>

                <!-- Notas -->
                <Button text="Notas" styleClass="menu-button" onAction="#handleNotas">
                    <graphic>
                        <SVGPath styleClass="icon" content="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zM6 4h7v5h5v11H6V4zm8 14H9v-2h5v2zm0-4H9v-2h5v2zm0-4H9V8h5v2z"/>                    </graphic>
                </Button>
                <!-- Salir -->
                <Button text="Salir" styleClass="menu-button" onAction="#handleSalir" VBox.vgrow="ALWAYS">
                    <graphic>
                        <SVGPath styleClass="icon" content="M13 3h-2v10h2V3zm4.83 2.17l-1.42 1.42C17.99 7.86 19 9.81 19 12c0 3.87-3.13 7-7 7s-7-3.13-7-7c0-2.19 1.01-4.14 2.58-5.42L6.17 5.17C4.23 6.82 3 9.26 3 12c0 4.97 4.03 9 9 9s9-4.03 9-9c0-2.74-1.23-5.18-3.17-6.83z"/>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <StackPane>
            <Label text="¡Bienvenido!" styleClass="welcome-message" />
        </StackPane>
    </center>
</BorderPane>